<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#e2e2e2"
	tools:context="com.team_htbr.a1617proj1bloeddonatie_app.DonorTestActivity">

	<ScrollView
		android:layout_width="368dp"
		android:layout_height="wrap_content"
		tools:layout_editor_absoluteY="10dp"
		tools:layout_editor_absoluteX="8dp">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout_editor_absoluteY="10dp"
			tools:layout_editor_absoluteX="10dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="20dp"
			android:weightSum="1">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginBottom="30dp"
				android:layout_marginTop="20dp">

				<ImageView
					android:src="@drawable/ic_18plus"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Leeftijd"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je bent minstens 18 jaar oud."
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_sickness"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Ziektes "
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je bent de laatste 2 weken niet ziek geweest."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_physical"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:id="@+id/textView2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Fysieke gezondheid"
						android:textSize="18sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/textView3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:text="Je BMI ligt tussen 18,7 en 23,8 (vrouwen) of tussen 20 en 25 (mannen)."
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_blood"
					android:layout_width="50dp"
					android:layout_height="match_parent"
					/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Vorige donaties"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je laatste donatie dateert van minstens 2 maanden geleden."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_travelling"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Buitenlandse reizen"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je bent in de laatste 6 maanden niet buiten Europa op reis geweest."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_operation"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Operaties "
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je hebt de laatste 4 maanden geen operatie ondergaan."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:layout_weight="0.04">

				<ImageView
					android:src="@drawable/ic_pregnancy"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Zwangerschap"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je bent niet zwanger en je laatste bevalling dateert van minstens 6 maanden geleden."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_tattoo"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Tatoeages &amp; piercings"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je hebt de laatste 4 maanden geen piercing of tatoeage laten zetten."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_blood"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Contact met bloed"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je bent in de laatste 4 maanden niet in contact geweest met bloed van iemand anders."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_sex"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Seksuele partner(s)"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je hebt het afgelopen jaar geen seks gehad met een HIV-positief persoon."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>


			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp">

				<ImageView
					android:src="@drawable/ic_medication"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Medicatie"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je hebt de laatste maand geen medicatie genomen en je hebt geen vaccinatie gehad."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="20dp">

				<ImageView
					android:src="@drawable/ic_drugs"
					android:layout_width="50dp"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginLeft="10dp"
					android:gravity="center_vertical"
					android:weightSum="1">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Druggebruik"
						android:textStyle="bold"
						android:textSize="18sp" />

					<TextView
						android:text="Je hebt nooit drugs gespoten en hebt de voorbije 4 maanden geen drugs gesnoven."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:textSize="15sp"
						android:layout_weight="14" />

				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>



</android.support.v4.widget.DrawerLayout>
